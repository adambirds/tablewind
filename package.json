{
    "name": "tablewind",
    "version": "3.2.0",
    "description": "A React/Next.js/Tailwind CSS library for data tables.",
    "main": "index.js",
    "type": "module",
    "types": "index.d.ts",
    "style": "dist/tablewind.css",
    "files": [
        "dist",
        "index.d.ts",
        "index.js",
        "next"
    ],
    "scripts": {
        "build": "tsc --project tsconfig.build.json && rollup -c",
        "prepublishOnly": "npm run build",
        "lint": "eslint .",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
        "test": "jest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/adambirds/tablewind.git"
    },
    "keywords": [
        "react",
        "nextjs",
        "tailwind",
        "datatable",
        "component-library"
    ],
    "author": "Adam Birds",
    "license": "MIT",
    "peerDependencies": {
        "@headlessui/react": "^2.2.0",
        "@headlessui/tailwindcss": "^0.2.2",
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "swr": "^2.3.2",
        "tailwindcss": "^4.0.6",
        "date-fns": "^4.1.0"
    },
    "optionalPeerDependencies": {
        "next": ">=15.0.0",
        "react-router-dom": ">=7.0.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.2.0",
        "@eslint/js": "^9.20.0",
        "@headlessui/react": "^2.2.0",
        "@headlessui/tailwindcss": "^0.2.2",
        "@rollup/plugin-babel": "^6.0.4",
        "@rollup/plugin-commonjs": "^28.0.2",
        "@rollup/plugin-node-resolve": "^16.0.0",
        "@rollup/plugin-typescript": "^12.1.2",
        "@tailwindcss/postcss": "^4.0.7",
        "@types/node": "^22.13.4",
        "@types/react": "^19.0.10",
        "@types/react-dom": "^19.0.4",
        "@typescript-eslint/eslint-plugin": "^8.24.1",
        "@typescript-eslint/parser": "^8.24.1",
        "autoprefixer": "^10.4.20",
        "eslint": "^9.20.1",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.3",
        "eslint-plugin-react": "^7.37.4",
        "globals": "^15.15.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^15.4.3",
        "next": "^15.1.7",
        "prettier": "^3.5.1",
        "react": "^19.0.0",
        "rollup": "^4.34.8",
        "rollup-plugin-copy": "^3.5.0",
        "rollup-plugin-postcss": "^4.0.2",
        "typescript": "^5.7.3",
        "date-fns": "^4.1.0"
    },
    "exports": {
        ".": {
            "import": "./dist/src/react.js",
            "require": "./dist/src/react.cjs.js"
        },
        "./next": {
            "import": "./dist/src/next.js",
            "require": "./dist/src/next.cjs.js"
        },
        "./tablewind.css": "./dist/tablewind.css"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "dependencies": {
        "next": "^15.1.7",
        "react-router-dom": "^7.1.5"
    }
}
