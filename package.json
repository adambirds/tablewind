{
    "name": "tablewind",
    "version": "1.0.0",
    "description": "A React/Next.js/Tailwind CSS library for data tables.",
    "main": "dist/react.js",
    "types": "dist/react.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc --project tsconfig.build.json",
        "prepublishOnly": "npm run build",
        "lint": "eslint . --ext .ts,.tsx",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
        "test": "jest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/adambirds/tablewind.git"
    },
    "keywords": [
        "react",
        "nextjs",
        "tailwind",
        "datatable",
        "component-library"
    ],
    "author": "Adam Birds",
    "license": "MIT",
    "peerDependencies": {
        "react": "^19.0.0",
        "react-dom": "^19.0.0",
        "swr": "^2.3.2",
        "tailwindcss": "^4.0.0"
    },
    "optionalPeerDependencies": {
        "next": ">=15.0.0",
        "react-router-dom": ">=7.0.0"
    },
    "devDependencies": {
        "@headlessui/react": "^2.2.0",
        "@headlessui/tailwindcss": "^0.2.2",
        "@types/node": "^22.13.4",
        "@types/react": "^19.0.10",
        "@types/react-dom": "^19.0.4",
        "@typescript-eslint/eslint-plugin": "^8.24.1",
        "@typescript-eslint/parser": "^8.24.1",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-prettier": "^5.2.3",
        "eslint-plugin-react": "^7.37.4",
        "husky": "^9.1.7",
        "jest": "^29.0.0",
        "lint-staged": "^15.4.3",
        "prettier": "^3.5.1",
        "typescript": "^4.9.0"
    },
    "exports": {
        ".": {
            "import": "./dist/src/react.js",
            "require": "./dist/src/react.cjs"
        },
        "./next": {
            "import": "./dist/src/next.js",
            "require": "./dist/src/next.cjs"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "dependencies": {
        "next": "^15.1.7",
        "react-router-dom": "^7.1.5"
    }
}
